<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
            prefWidth="600.0" stylesheets="@userstyle.css" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.ui.client.controllers.PlaylistViewController">
    <children>
        <Label id="title" stylesheets="@userstyle.css" text="Playlist name" AnchorPane.leftAnchor="10.0"
               AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"/>
        <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
            <children>
                <AnchorPane HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                    <children>
                        <Label stylesheets="@userstyle.css" text="Search" AnchorPane.leftAnchor="10.0"
                               AnchorPane.topAnchor="0.0"/>
                        <HBox AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="20.0">
                            <children>
                                <TextField fx:id="tbSearch" styleClass="textbox" stylesheets="@userstyle.css">
                                    <HBox.margin>
                                        <Insets left="15.0"/>
                                    </HBox.margin>
                                </TextField>
                                <Button mnemonicParsing="false" onAction="#filterSongs" stylesheets="@userstyle.css"
                                        text="Go">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0"/>
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="10.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                    AnchorPane.topAnchor="60.0">
                            <content>
                                <VBox stylesheets="@userstyle.css">
                                    <children>
                                        <HBox styleClass="playlist" stylesheets="@userstyle.css">
                                            <children>
                                                <AnchorPane HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label fx:id="lbSongInfo" text="Songname - Arist"
                                                               AnchorPane.bottomAnchor="5.0"
                                                               AnchorPane.leftAnchor="35.0" AnchorPane.topAnchor="5.0"/>
                                                        <Label fx:id="lbSongTime" text="04:18"
                                                               AnchorPane.bottomAnchor="5.0"
                                                               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0"/>
                                                        <Button layoutX="530.0" layoutY="10.0" mnemonicParsing="false"
                                                                onAction="#songPlayPause" styleClass="musicbutton"
                                                                stylesheets="@userstyle.css" text=" ▶ "
                                                                AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                                                    </children>
                                                </AnchorPane>
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="10.0" top="10.0"/>
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                            <padding>
                                <Insets left="5.0" right="5.0"/>
                            </padding>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
        <AnchorPane id="bottombar" stylesheets="userstyle.css"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <VBox AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <HBox>
                            <children>
                                <Label fx:id="currentSongInfo" text="Songname - Artist">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                            <children>
                                <Button alignment="CENTER" layoutX="366.0" layoutY="20.0" mnemonicParsing="false"
                                        onAction="#toggleShuffle" styleClass="barbutton" stylesheets="@userstyle.css"
                                        text="Shuffle">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                                <Button alignment="CENTER" layoutX="320.0" layoutY="20.0" mnemonicParsing="false"
                                        onAction="#previousSong" styleClass="barbutton" stylesheets="@userstyle.css"
                                        text="◀">
                                    <HBox.margin>
                                        <Insets left="10.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button alignment="CENTER" mnemonicParsing="false" onAction="#currentSongPlayPause"
                                        styleClass="barbutton" stylesheets="@userstyle.css" text="⏸">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button alignment="CENTER" layoutX="288.0" layoutY="20.0" mnemonicParsing="false"
                                        onAction="#nextSong" styleClass="barbutton" stylesheets="@userstyle.css"
                                        text="▶">
                                    <HBox.margin>
                                        <Insets right="10.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button alignment="CENTER" layoutX="234.0" layoutY="20.0" mnemonicParsing="false"
                                        onAction="#toggleLoop" styleClass="barbutton" stylesheets="@userstyle.css"
                                        text="Loop">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <ProgressBar fx:id="songTimeProgress" progress="0.264" styleClass="progressbar"
                             stylesheets="@userstyle.css" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="5.0"
                             AnchorPane.rightAnchor="5.0"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
